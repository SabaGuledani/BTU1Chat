<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/senderImg_response"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="57dp"
        android:layout_alignLeft="@+id/txt_recceived_recres"
        android:layout_marginEnd="-33dp"
        android:layout_toStartOf="@+id/linearshec"
        android:src="@drawable/next"
        android:forceDarkAllowed="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/name_response"
        android:layout_height="wrap_content"
        android:text="name"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="45dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sent_background"
        android:backgroundTint="#6D3668AF"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="17dp"
        android:forceDarkAllowed="false"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:maxWidth="250dp"
            android:layout_height="wrap_content"
            android:maxHeight="50dp"
            android:text="this is sent message"
            android:textSize="18sp"
            android:padding="10dp"
            android:maxLines="1"
            android:id="@+id/txt_sent_recres"
            android:textColor="@color/white"
            android:forceDarkAllowed="false"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linearshec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_background"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="50dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:maxWidth="250dp"
            android:layout_height="wrap_content"
            android:text="this is received message"
            android:textSize="18sp"
            android:padding="10dp"
            android:id="@+id/txt_recceived_recres"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/reactsLayout"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/linearshec"
        android:layout_alignEnd="@id/linearshec"
        android:layout_alignBottom="@id/txt_recceived_recres"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/sent_background"
        android:minWidth="22dp"
        android:visibility="gone">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/circleguja"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/circle"
            app:srcCompat="@drawable/guja"
            android:visibility="gone"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/circlesaxia"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginLeft="-3dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/circle"
            app:srcCompat="@drawable/saxia"
            android:visibility="gone"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/circlemgelisaxia"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginLeft="-3dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/circle"
            app:srcCompat="@drawable/saxiamgeli"
            android:visibility="gone"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/circlebarbare"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginLeft="-3dp"
            android:layout_marginRight="2dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:shapeAppearanceOverlay="@style/circle"
            app:srcCompat="@drawable/barbaredafoe" />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/circlenini"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginLeft="-3dp"
            android:layout_marginRight="2dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:shapeAppearanceOverlay="@style/circle"
            app:srcCompat="@drawable/ninishoki" />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/jesus"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginLeft="-3dp"
            android:layout_marginRight="2dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:shapeAppearanceOverlay="@style/circle"
            app:srcCompat="@drawable/jesus" />


    </LinearLayout>



</RelativeLayout>